    .progress-bar {
        text-align:center;
        width: 100%;
        height: 100px;
        position: relative;
        background-color: white;
        box-shadow:none;
    }

        .progress-bar .progress-bar__trace {
            height: 6px;
            width: 100%;
            margin: auto auto;
            top: 35%;
            background-color: #d2d2d2;
            position: relative;
            transform: translateY(-50%);
            display: block;
            float: left;
            overflow: hidden;
        }

        .progress-bar .progress-bar__background {
            width: 100%;
            height: 100%;
            background-color: var(--purple-color);
            transition: transform .3s ease-in-out;
        }

    .step-1.progress-bar .progress-bar__background {
        transform: translateX(-77%);
    }

    .step-2.progress-bar .progress-bar__background {
        transform: translateX(-44%);
    }

    .step-3.progress-bar .progress-bar__background {
        transform: translateX(-14%);
    }

    .step-4.progress-bar .progress-bar__background {
        transform: translateX(0%);
    }

    .progress-bar .progress-bar__icon {
        transition: all .3s ease-in-out;
        width: 60px;
        height: 60px;
        background-color: white;
        border: solid 3px #d2d2d2;
        transform: translateY(-50%);
        position: absolute;
        display: inline-block;
        border-radius: 50%;
        top: 35%;
        text-align: center;
        vertical-align: middle;
    }

        .progress-bar .progress-bar__icon svg {
            fill: #f2f2f2;
            width: 50%;
            position: relative;
            top: 50%;
            transform: translateY(-50%);
        }

        .progress-bar .progress-bar__icon span {
            position: absolute;
            bottom: -30px;
            width: 150px;
            left: 50%;
            text-align: center;
            transform: translateX(-50%);
        }

        .progress-bar .progress-bar__icon.first-icon {
            left: 0;
        }

        .progress-bar .progress-bar__icon.second-icon {
            left: calc((100% / 3) - 23.333333333333px);
        }

        .progress-bar .progress-bar__icon.third-icon {
            right: calc((100% / 3) - 23.333333333333px);
        }

        .progress-bar .progress-bar__icon.last-icon {
            right: 0;
        }

    .step-1.progress-bar .progress-bar__icon.first-icon {
        border: solid 3px var(--purple-color);
        background-color: var(--purple-color);
    }    
    
        .step-1.progress-bar .progress-bar__icon.first-icon span {
            color: var(--purple-color);
        }

        .step-1.progress-bar .progress-bar__icon.first-icon svg {
