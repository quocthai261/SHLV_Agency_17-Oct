            if (classItem == "accordion-title active-title") {
                $("i.bi-arrow-up-circle", this).removeClass("bi-arrow-up-circle").toggleClass("bi-arrow-down-circle");
                $(this).removeClass("active-title");
            }
            else {
                $("i.bi-arrow-down-circle", this).toggleClass("bi-arrow-up-circle").removeClass("bi-arrow-down-circle");
                $(this).toggleClass("active-title");
            }
        });

    });
</script>