                                columns.Add().DataField(nameof(ContractRecordDto.PolicyOwner)).Caption("Bên mua bảo hiểm").Width(120);
                                columns.Add().DataField(nameof(ContractRecordDto.AddressCustomer)).Caption("Địa chỉ khách hàng").MinWidth(150);
                                columns.Add().DataField(nameof(ContractRecordDto.LifeAssured)).Caption("Người được bảo hiểm").MinWidth(150);
                                columns.Add().DataField(nameof(ContractRecordDto.RegularPremium)).Caption("Phí định kỳ").Format(Format.FixedPoint);
                                columns.Add().DataField(nameof(ContractRecordDto.TemporaryCollection)).Caption("Phí tạm thu").Format(Format.FixedPoint);
                                columns.Add().DataField(nameof(ContractRecordDto.StatusProposal)).Caption("Tình trạng hồ sơ/hợp đồng").Width(150);
