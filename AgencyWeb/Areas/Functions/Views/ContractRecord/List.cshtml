<script>
    function onViewClicked(id) {
        window.location.href = '@Url.Action("Detail", "ContractRecord", new { Area = "Functions", id = "PARAMETER_ID" })'.replace(/PARAMETER_ID/g, id);
    }

    function exportingGrid(e) {
        var workbook = new ExcelJS.Workbook();
        var worksheet = workbook.addWorksheet('ContractRecord');

        DevExpress.excelExporter.exportDataGrid({
            component: e.component,
            worksheet: worksheet,
            autoFilterEnabled: true
        }).then(function () {
            workbook.xlsx.writeBuffer().then(function (buffer) {
                saveAs(new Blob([buffer], { type: 'application/octet-stream' }), 'ContractRecordList.xlsx');
            });
        });
        e.cancel = true;
    }
</script>

