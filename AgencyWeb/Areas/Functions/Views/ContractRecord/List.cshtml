                            .DataType(GridColumnDataType.DateTime).Format("dd/MM/yyyy").Alignment(HorizontalAlignment.Center).Width(150);
                                columns.Add().DataField(nameof(ContractRecordDto.DownloadAttachment)).Caption("Tải thư thông báo").Width(150)
                            .CellTemplate(@<text>
                                <div style="text-align: center;">
                                    <span class="glyphicon glyphicon-cloud-download icon-grid" onclick="onViewClicked()"></span>
                                </div>
                            </text>);
